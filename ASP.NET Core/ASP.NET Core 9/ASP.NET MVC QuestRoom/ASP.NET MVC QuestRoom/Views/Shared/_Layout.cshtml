<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_MVC_QuestRoom</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.NET_MVC_QuestRoom.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-collapse navbar-background-colors navbar-expand-sm navbar-toggleable-sm box-shadow py-0 ">
            <div class="container-fluid navcontain">
                <a class="navbar-brand" asp-area="" asp-controller="QuestRooms" asp-action="Index">
                    <img style="object-fit: fill;" src="~/images/site/logo.png" />
                </a>
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-dark"></span>
                </button>
                <div class="navbar-collapse  collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-5 justify-content-end flex-grow-1">
                        <li class="nav-item my-0 mx-2">
                            <a class="nav-link " asp-area="" asp-controller="Admin" asp-action="Create">Add Quest</a>
                        </li>
                        <li class="nav-item my-0 mx-2">
                            <a class="nav-link " asp-area="" asp-controller="QuestRooms" asp-action="Index">All Quests</a>
                        </li>
                        <li class="nav-item my-0 mx-2">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @* <div class="container"> *@
        <div class="">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    @* </div> *@
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ASP.NET_MVC_QuestRoom - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
