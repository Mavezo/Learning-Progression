<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Height="40">Button 1</Button>
        <Button DockPanel.Dock="Bottom" Height="40">Button 2</Button>
        <Button DockPanel.Dock="Left" Width="100">Button 3</Button>
        <Button DockPanel.Dock="Top" Height="40">Button 4</Button>
        <Button >Button 5</Button>
        
    </DockPanel>
</Window>
